<% if @user.photo.url.nil? %>
<%= cl_image_tag("default_avatar.png") %>
<% else %>
 <%= cl_image_tag(@user.photo, :width=>200, :height=>200) %>
 <% end %>

 <h2><%= @user.first_name %> <%= @user.last_name %></h2>



<p>Your dreams:</p>
<% @user.dreams.reverse_each do |dream| %>
  <p><%= dream.title %></p>
  <p><%= dream.description %></p>
  <p><%= dream.created_at %></p>
  <% if policy(dream).edit? %>
      <%= link_to "Update", edit_dream_path(dream) %>
    <% end %>
  <% if policy(dream).destroy? %>
  <%= link_to 'Delete', dream, method: :delete, data: { confirm: 'Are you sure?'} %>
  <% end %>
<% end %>

<% if policy(Dream).index? %>
 <p><%= link_to 'Back to index', dreams_path %></p>
 <% end %>

 <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>

