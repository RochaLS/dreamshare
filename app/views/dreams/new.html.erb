<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="text-center form-heading">Add a Dream</h2>
      <div class="form-inputs">
        <%= simple_form_for @dream do |f| %>
          <%= f.input :title, required: true, input_html: { class: 'form-input'} %>
          <%= f.input :description, as: :text, required: true, input_html: { class: 'form-input'}%>
           <%= f.input :private, as: :select, label: "Would you like to set your Dream as private?", required: true, error: "This field can't be blank", input_html: { class: 'form-input'}  %>
         </div>
        <%= f.button :submit, "Add Dream", class: "form-button" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to '<i class="fas fa-chevron-left"></i>'.html_safe, :back, class: "back-icon" %>

<% if current_user %>
<nav class="navbar">
 <%= link_to '<i class="fas fa-home"></i>'.html_safe, dreams_path %>
  <%= link_to '<i class="fas fa-plus-circle"></i>'.html_safe, new_dream_path, class: 'icon-active' %>
  <%= link_to '<i class="far fa-user"></i>'.html_safe, user_path(current_user) %>
</nav>
<% end %>

