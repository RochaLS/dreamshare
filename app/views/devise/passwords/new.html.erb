<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="text-center form-heading"><%= t(".title") %></h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, input_html: { class: 'form-input'} %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t(".submit"), class: 'form-button' %>
        </div>
      <% end %>
      <div class="form-link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
