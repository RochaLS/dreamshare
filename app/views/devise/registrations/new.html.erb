<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="text-center form-heading">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="row">
            <div class="col-xs-6">
              <%= f.input :first_name, required: true, placeholder: "John", input_html: { class: 'form-input'} %>
            </div>
            <div class="col-xs-6">
              <%= f.input :last_name, required: true, placeholder: "Doe",  input_html: { class: 'form-input'}%>
            </div>
          </div>
          <%= f.input :username, required: true, placeholder: "John123", input_html: { class: 'form-input'} %>
          <%= f.input :email,
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "email" }, input_html: { class: 'form-input'}, placeholder: "john@gmail.com" %>
          <%= f.input :password,
                      required: true,
                      placeholder: "6 characters minimum",
                      input_html: { autocomplete: "new-password" }, input_html: { class: 'form-input'} %>
          <%= f.input :password_confirmation,
                      required: true,
                      placeholder: "**********",
                      input_html: { autocomplete: "new-password" }, input_html: { class: 'form-input'}%>
          <%= f.input :photo %>
          <div class="user-avatar">
            <p>Avatar picture</p>
            <i class="fas fa-camera-retro"></i>
            <span id="file-count">0</span><span>  selected files</span>
          </div>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "form-button" %>
        </div>
      <% end %>
      <div class="form-link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
